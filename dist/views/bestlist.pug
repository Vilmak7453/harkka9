extends layout

block head
	script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")

block content
	div(id="list", class="center container")
		h1=title
		div(class="section row")
			div(class="flow-text col offset-m3 m6 s12")
				ul(class="collection")
					nice-thing(
						v-for="item in things", 
						v-bind:thing="item", 
						v-bind:key="item.id",
						v-on:remove="removeThing(item.id)"
					)

		div(class="section row")
			div(class="input-field")
				input(class="col", type="text", v-model="newthing")
				span(class="col btn", v-bind:class="{disabled: isDisabled}", v-on:click="addThing") Lisaa kiva juttu

		div(class="section row")
			div(class="col")
				p {{ errortext }}
			div(class="load-circle col preloader-wrapper small", v-bind:class="{active: isDisabled}")
				div(class="spinner-layer spinner-blue")
					div(class="circle-clipper left")
						div(class="circle")
					div(class="gap-patch")
						div(class="circle")
					div(class="circle-clipper right")
						div(class="circle")
	
	script(type="text/javascript", src="../main.js")